<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logopens"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/advent_pro"
            android:textStyle="bold"
            android:text="PSDKUBEM-VOTE"
            android:textSize="20dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewVote"
                android:layout_marginTop="5dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="230dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/menuVoting"
                    android:background="#ffeeef"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:src="@drawable/voting"/>

                    <TextView
                        android:id="@+id/namaMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="Voting"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewResult"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="230dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/linkToResult"
                    android:background="#eff4fd"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/resultvote"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:textSize="18dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="230dp">

                <LinearLayout
                    android:background="#FDF5FF"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@drawable/profilcalon"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:text="Profile Calon"
                        android:fontFamily="@font/alegreya_sans"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="230dp">

                <LinearLayout
                    android:background="#edfaee"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tatacara"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Procedures"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:fontFamily="@font/alegreya_sans"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>